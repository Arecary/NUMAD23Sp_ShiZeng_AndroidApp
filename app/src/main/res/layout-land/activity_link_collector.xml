<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LinkCollector"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_Url"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp"

        />

    <EditText
        android:id="@+id/et_InputUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Add_Url_Hint"
        android:windowSoftInputMode="adjustResize"
        app:layout_constraintBottom_toTopOf="@+id/btn_AddUrl"
        app:layout_constraintTop_toBottomOf="@+id/rv_Url"
        app:layout_constraintVertical_bias="0.525"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_AddUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Add_Url"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rv_Url"
        app:layout_constraintVertical_bias="0.757" />


</androidx.constraintlayout.widget.ConstraintLayout>